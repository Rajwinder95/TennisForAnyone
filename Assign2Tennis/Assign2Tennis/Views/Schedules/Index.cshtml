@model IEnumerable<Assign2Tennis.Models.Schedule>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

@if (User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("Admin"))
    {
    <p>
     <a asp-action="Create">Create Schedule</a>
    </p>

    }
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {

                            <a asp-action="Edit" asp-route-id="@item.Id">Edit|</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    }

                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Member"))
                        {

                            <a asp-action="Enrol" asp-route-id="@item.Id">Enrol</a>
                        }
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
